{
    "name": "auction-project",
    "version": "1.0.0",
    "description": "My TypeScript implementation a second-price sealed-bid auction kata.",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "start": "tsc && node dist/index.js",
        "start-dev": "ts-node-dev src/index.ts",
        "test": "jest",
        "test:watch": "jest --watch",
        "clean": "rm -rf dist",
        "format": "prettier --write \"src/**/*.{ts}\"",
        "format:check": "prettier --check \"src/**/*.{ts}\""
    },
    "keywords": [
        "auction",
        "typescript",
        "kata",
        "solid",
        "clean-code",
        "clean-architecture"
    ],
    "author": "Pavel FOUJEU",
    "license": "MIT",
    "devDependencies": {
        "@types/jest": "^29.0.0",
        "@typescript-eslint/eslint-plugin": "^8.4.0",
        "@typescript-eslint/parser": "^8.4.0",
        "eslint": "^9.9.1",
        "jest": "^29.0.0",
        "prettier": "^3.3.3",
        "ts-jest": "^29.0.0",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^1.1.8",
        "typescript": "^5.5.4"
    },
    "dependencies": {
        "chalk": "^4.1.2"
    }
}